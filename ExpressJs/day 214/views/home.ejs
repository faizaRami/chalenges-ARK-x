<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.1/mdb.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/styles.css">

    <title>Home Page</title>
</head>

<body>

    <div class="container">
        <h1 class="text-center mx-5">Products Items</h1>
        <div class="row">
            <% products.forEach((product) => { %> 
                <div class="col-sm-6 col-md-4 col-lg-4 col-xs-6">
                <div class="shadow-sm card mb-3 product">
                    <img class="product-img " src="/img/<%= product.image %>" alt="img" />
                    <button class="like-btn"><i class="fa-solid fa-heart like" style="color: #a3a5a8;"></i></button>
                    <div class="card-body">
                        <h5 class="card-title text-info bold product-name me-2"><%= product.name %></h5>
                        <p class="card-text text-warning product-price"><%= product.price %></p>
                        <button class="btn badge badge-pill badge-secondary mt-2 float-right " type="button"
                            data-action="add-to-cart">Add to cart</button>
                            <button class="btn badge badge-pill badge-secondary mt-2 float-right " type="button"
                            data-action="add-to-cart"><a href="/product/<%= product.id %>">Details</a> </button>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </div>
    <script src="/js/script.js"></script>
</body>

</html>